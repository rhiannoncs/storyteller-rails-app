<%= form_for @team do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %><%= tag.br%>
	<%= f.label :membership_status %><%= tag.br %>
	<%= f.radio_button :open_membership, 'true', :checked => true %>
	<%= label :open_membership_true, 'Open' %>
	<%= f.radio_button :open_membership, 'false' %>
	<%= label :open_membership_false, 'Closed to New Members' %><%= tag.br %>

	<%= f.submit %>
<% end %>