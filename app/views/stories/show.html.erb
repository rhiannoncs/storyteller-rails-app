<%= content_tag(:h1, @story.title) %>
<%= link_to team_path(@story.team) do %>
	<%= content_tag(:h3, "By: #{@story.team_name}") %>
<% end %>
<%= content_tag(:h4, "Contributors:") %>
<% @story.contributors.each do |user| %>
	<%= link_to user.name, user_path(user) %>
	<%= tag.br %>
<% end %>
<% @story.submissions.each do |s| %>
	<%= content_tag(:p, s.content) %>
<% end %>
<%= add_submission(@story) %><%= tag.br %>
<%= edit_story(@story) %>