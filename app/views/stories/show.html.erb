<%= content_tag(:h1, @story.title, class: "story_title") %>
<%= link_to team_path(@story.team), class: "story_team" do %>
	<%= content_tag(:h3, "By: #{@story.team_name}") %>
<% end %>
<%= content_tag(:h4, "Status: #{story_status(@story)}", class: "story_status") %>
<%= content_tag(:h4, "Contributors:") %>
<%= content_tag :div, class: "story_contributors" do %>
	<% @story.contributors.each do |user| %>
		<%= link_to user.name, user_path(user) %>
		<%= tag.br %>
	<% end %>
<% end %>
<%= content_tag :div, class: "story_content" do %>
	<% @story.submissions.each do |s| %>
		<%= content_tag(:p, s.content) %>
	<% end %>
<% end %>

<%= link_to("Next Public Story", '#', class: "js-next-story", data: {id: @story.next_public.id}) %><%= tag.br %>
<%= add_submission(@story) %><%= tag.br %>
<%= edit_story(@story) %><%= tag.br %>
<%= edit_submissions(@story) %>